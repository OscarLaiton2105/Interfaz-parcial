<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inicio">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e5fcfb">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="281dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout"
                        android:layout_width="430dp"
                        android:layout_height="280dp"
                        android:background="@drawable/top_background"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.526"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0">

                        <!-- Inicio Menu Superior -->

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="32dp"
                            android:layout_marginTop="36dp"
                            android:fontFamily="cursive"
                            android:text="Hola"
                            android:textColor="#ffffff"
                            android:textSize="30sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/imageView5" />

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="cursive"
                            android:text="Usuario"
                            android:textColor="#F4BE40"
                            android:textSize="35sp"
                            app:layout_constraintBottom_toBottomOf="@+id/imageView5"
                            app:layout_constraintStart_toStartOf="@+id/textView11"
                            app:layout_constraintTop_toBottomOf="@+id/textView11"
                            app:layout_constraintVertical_bias="0.158" />

                        <GridLayout
                            android:layout_width="325dp"
                            android:layout_height="119dp"
                            android:layout_margin="25dp"
                            android:layout_marginTop="10dp"
                            android:columnCount="3"
                            android:rowCount="4"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.152"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.98">

                            <!-- Videollamada -->

                            <androidx.cardview.widget.CardView
                                android:layout_width="96dp"
                                android:layout_height="104dp"
                                android:layout_row="0"
                                android:layout_column="0"
                                android:layout_margin="10dp"
                                app:cardBackgroundColor="#CFF4F1"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="8dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/imageViewVideoCall"
                                        android:layout_width="67dp"
                                        android:layout_height="68dp"
                                        android:src="@drawable/video_call" />

                                    <TextView
                                        android:id="@+id/textViewVideoCall"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Perfil"
                                        android:textAlignment="center"
                                        android:textSize="13sp" />
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <!-- Notificación -->

                            <androidx.cardview.widget.CardView
                                android:layout_width="96dp"
                                android:layout_height="104dp"
                                android:layout_row="0"
                                android:layout_column="1"
                                android:layout_margin="10dp"
                                app:cardBackgroundColor="#CFF4F1"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="8dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/imageViewNotification"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/notification" />

                                    <TextView
                                        android:id="@+id/textViewNotification"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Notificación"
                                        android:textAlignment="center"
                                        android:textSize="15sp" />
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <!-- Llamada -->

                            <androidx.cardview.widget.CardView
                                android:layout_width="96dp"
                                android:layout_height="104dp"
                                android:layout_row="0"
                                android:layout_column="2"
                                android:layout_margin="10dp"
                                app:cardBackgroundColor="#CFF4F1"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="8dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/imageViewCall"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/voice_call" />

                                    <TextView
                                        android:id="@+id/textViewCall"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Llamada"
                                        android:textAlignment="center"
                                        android:textSize="15sp" />
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                        </GridLayout>

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="125dp"
                            android:layout_height="130dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:srcCompat="@drawable/profile"
                            tools:layout_editor_absoluteY="4dp" />

                        <!-- Cierre Menu Superior -->

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Cuadro de busqueda -->

                <!-- Inicia  panel Inventario -->

                <EditText
                    android:id="@+id/editTextText8"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="55dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/white_backgroung"
                    android:drawableEnd="@drawable/search_icon"
                    android:ems="10"
                    android:hint="Buscar"
                    android:inputType="textPersonName"
                    android:paddingStart="16sp"
                    android:paddingEnd="4dp"
                    android:textColor="#8D8D8D"
                    android:textColorHint="#8D8D8D"
                    android:textSize="16dp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/Botonagregar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="18dp"
                    android:background="@drawable/green_button"
                    android:drawableEnd="@drawable/add_77928"
                    android:fontFamily="cursive"
                    android:text="Agregar Producto"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/botoneditar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="18dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/green_button"
                    android:drawableEnd="@drawable/as"
                    android:fontFamily="cursive"
                    android:textStyle="bold"
                    android:text="Editar Producto" />

                <Button
                    android:id="@+id/botonlistar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="18dp"
                    android:background="@drawable/green_button"
                    android:drawableEnd="@drawable/aaa"
                    android:fontFamily="cursive"
                    android:text="Mostrar Inventario"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/botoneliminar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="18dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/green_button"
                    android:drawableEnd="@drawable/a"
                    android:fontFamily="cursive"
                    android:textStyle="bold"
                    android:text="Eliminar Producto" />


            </LinearLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>